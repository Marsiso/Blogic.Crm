    </thead>
    <tbody>
    @foreach (var client in clients)
    {
        <tr>
            <td>@client.Id</td>
            <td>
                @client.Email
                <br/>
                @client.NormalizedEmail
            </td>
            <td>@client.IsEmailConfirmed.ToString()</td>
            <td>@client.GivenName</td>
            <td>@client.FamilyName</td>
            <td>@client.Phone</td>
            <td>@client.IsPhoneConfirmed.ToString()</td>
            <td>
                @client.DateBorn.ToString("dd/MM/yyyy")
                <br>
                @client.DateBorn.Humanize()
            </td>
            <td>@($"{client.BirthNumber[..6]}/{client.BirthNumber[6..]}")</td>
            <td>
                <div class="d-flex justify-content-start align-items-center">
                    <a asp-route-id="@client.Id.ToString()"
                       asp-controller="Client"
                       asp-action="Detail"
                       class="text-decoration-none me-2">
                        Detail
                    </a>
                </div>
                <div class="d-flex justify-content-start align-items-center">
                    <a asp-route-id="@client.Id.ToString()"
                       asp-controller="Client"
                       asp-action="DeleteClient"
                       class="text-decoration-none me-2">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
    </table>
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="d-flex justify-content-center align-items-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="@($"page-item {(clients.HasPrevious ? string.Empty : "disabled")}")">
                            <a asp-action="Dashboard"
                               asp-route-pageSize="@clients.PageSize.ToString()"
                               asp-route-pageNumber="@QueryStringParameters.MinimumPageNumber"
                               asp-route-searchString="@(Model.SearchString)"
                               asp-route-sortOrder="@(Model.SortOrder)"
                               class="@($"page-link {(clients.CurrentPage == QueryStringParameters.MinimumPageNumber ? "disabled" : string.Empty)}")">
                                First
                            </a>
                        </li>
                        <li class="@($"page-item {(clients.HasPrevious ? string.Empty : "disabled")}")">
                            <a asp-action="Dashboard"
                               asp-route-pageSize="@clients.PageSize.ToString()"
                               asp-route-pageNumber="@((clients.CurrentPage - 1).ToString())"
                               asp-route-searchString="@(Model.SearchString)"
                               asp-route-sortOrder="@(Model.SortOrder)"
                               class="@($"btn page-link {(clients.HasPrevious ? string.Empty : "disabled")}")">
                                Prev
                            </a>
                        </li>
                        @if (clients.HasPrevious)
                        {
                            <li class="page-item">
                                <a asp-action="Dashboard"
                                   asp-route-pageSize="@clients.PageSize.ToString()"
                                   asp-route-pageNumber="@((clients.CurrentPage - 1).ToString())"
                                   asp-route-searchString="@(Model.SearchString)"
                                   asp-route-sortOrder="@(Model.SortOrder)"
                                   class="page-link">
                                    @((clients.CurrentPage - 1).ToString())
                                </a>
                            </li>
                        }
                        <li class="page-item active">
                            <a class="page-link"
                               asp-action="Dashboard"
                               asp-route-pageSize="@clients.PageSize.ToString()"
                               asp-route-pageNumber="@clients.CurrentPage.ToString()"
                               asp-route-searchString="@(Model.SearchString)"
                               asp-route-sortOrder="@(Model.SortOrder)">
                                @clients.CurrentPage
                            </a>
                        </li>
                        @if (clients.HasNext)
                        {
                            <li class="page-item ">
                                <a asp-action="Dashboard"
                                   asp-route-pageSize="@clients.PageSize.ToString()"
                                   asp-route-pageNumber="@((clients.CurrentPage + 1).ToString())"
                                   asp-route-searchString="@(Model.SearchString)"
                                   asp-route-sortOrder="@(Model.SortOrder)"
                                   class="page-link">
                                    @((clients.CurrentPage + 1).ToString())
                                </a>
                            </li>
                        }
                        <li class="@($"page-item {(clients.HasNext ? string.Empty : "disabled")}")">
                            <a asp-action="Dashboard"
                               asp-route-pageSize="@clients.PageSize.ToString()"
                               asp-route-pageNumber="@((clients.CurrentPage + 1).ToString())"
                               asp-route-searchString="@(Model.SearchString)"
                               asp-route-sortOrder="@(Model.SortOrder)"
                               class="@($"page-link {(clients.HasNext ? string.Empty : "disabled")}")">
                                Next
                            </a>
                        </li>
                        <li class="@($"page-item {(clients.HasNext ? string.Empty : "disabled")}")">
                            <a asp-action="Dashboard"
                               asp-route-pageSize="@clients.PageSize.ToString()"
                               asp-route-pageNumber="@clients.TotalPages.ToString()"
                               asp-route-searchString="@(Model.SearchString)"
                               asp-route-sortOrder="@(Model.SortOrder)"
                               class="@($"page-link {(clients.CurrentPage == clients.TotalPages ? "disabled" : string.Empty)}")">
                                Last
                            </a>
                        </li>
                    </ul>
                </nav>

            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @item.Email
                        <br/>
                        @item.NormalizedEmail
                    </td>
                    <td>@item.IsEmailConfirmed.ToString()</td>
                    <td>@item.GivenName</td>
                    <td>@item.FamilyName</td>
                    <td>@item.Phone</td>
                    <td>@item.IsPhoneConfirmed.ToString()</td>
                    <td>
                        @item.DateBorn.ToString("yyyy-MM-dd")
                        <br>
                        @item.DateBorn.Humanize()
                    </td>
                    <td>@item.BirthNumber</td>
                </tr>
            }
            </tbody>
            </table>
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="d-flex justify-content-center align-items-center">
                <a asp-action="Index"
                   asp-route-pageSize="@(Model.PageSize)"
                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   class="@($"btn {(Model.HasPrevious ? string.Empty : "disabled")}")">
                    Previous
                </a>
                <span class="ms-2 me-2">@Model.CurrentPage</span>
                <a asp-action="Index"
                   asp-route-pageSize="@(Model.PageSize)"
                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   class="@($"btn {(Model.HasNext ? string.Empty : "disabled")}")">
                    Next
                </a>
            </div>
        </div>
        <div class="col-4"></div>
    </div>

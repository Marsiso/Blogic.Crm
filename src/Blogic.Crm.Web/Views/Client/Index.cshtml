@using Humanizer
@using Blogic.Crm.Domain.Data.Entities
@using Blogic.Crm.Infrastructure.Pagination
@using Blogic.Crm.Infrastructure.Sorting
@model ClientViewModel

@{
    ViewData["Title"] = "Client Dashboard";
    var clients = Model.Clients;
    var queryString = Model.QueryStringParameters;
}

<h1 class="mt-4">Dashboard</h1>

@if (clients is { Count: > 0 })
{
    <form method="get">
        <div class="table-responsive">
            <table class="table table-borderless">
                <tbody>
                <tr>
                    <td>
                        <div class="input-group">
                            <span class="input-group-text" id="search-bar">Search</span>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Search clients ..."
                                   aria-label="Search"
                                   aria-describedby="search-bar"
                                   name="SearchString"
                                   value="@ViewData["CurrentFilter"]">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="page-size" class="form-label">@($"Page Size: \t {clients.PageSize}")</label>
                        <input type="range"
                               class="form-range"
                               min="@QueryStringParameters.MinimumPageSize"
                               max="@QueryStringParameters.MaximumPageSize"
                               id="page-size"
                               name="@nameof(queryString.PageSize)"
                               value="@queryString.PageSize">
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="btn" type="submit">Filter</button>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </form>

    <div class="table-responsive">
    <table class="table table-hover table-sm">
    <caption>@clients.TotalTotalItems Matches</caption>
    <thead>
    <tr>
    <th scope="col">
        <div class="d-flex justify-content-start align-items-center">

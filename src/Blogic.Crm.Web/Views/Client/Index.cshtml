@using Humanizer
@using Blogic.Crm.Domain.Data.Entities
@using Blogic.Crm.Infrastructure.Paging
@model Blogic.Crm.Infrastructure.Paging.PaginatedList<Blogic.Crm.Domain.Data.Dtos.ClientRepresentation>

@{
    ViewData["Title"] = "Client Dashboard";
}


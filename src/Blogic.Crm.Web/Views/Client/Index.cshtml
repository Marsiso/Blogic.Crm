    </tr>
    </thead>
    <tbody>
    @foreach (var client in clients)
    {
        <tr>
            <td>@client.Id</td>
            <td>
                @client.Email
                <br/>
                @client.NormalizedEmail
            </td>
            <td>@client.IsEmailConfirmed.ToString()</td>
            <td>@client.GivenName</td>
            <td>@client.FamilyName</td>
            <td>@client.Phone</td>
            <td>@client.IsPhoneConfirmed.ToString()</td>
            <td>
                @client.DateBorn.ToString("yyyy-MM-dd")
                <br>
                @client.DateBorn.Humanize()
            </td>
            <td>@client.BirthNumber</td>
        </tr>
    }
    </tbody>
    </table>
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="d-flex justify-content-center align-items-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="@($"page-item {(clients.HasPrevious ? string.Empty : "disabled")}")">
                            <a asp-action="Index"
                               asp-route-pageSize="@(clients.PageSize)"
                               asp-route-pageNumber="@(clients.CurrentPage - 1)"
                               asp-route-searcString="@(queryString.SearchString)"
                               class="@($"btn page-link {(clients.HasPrevious ? string.Empty : "disabled")}")">
                                Prev
                            </a>
                        </li>
                        @if (clients.HasPrevious)
                        {
                            <li class="page-item">
                                <a asp-action="Index"
                                   asp-route-pageSize="@(clients.PageSize)"
                                   asp-route-pageNumber="@(clients.CurrentPage - 1)"
                                   asp-route-searcString="@(queryString.SearchString)"
                                   class="page-link">
                                    @((clients.CurrentPage - 1).ToString())
                                </a>
                            </li>
                        }
                        <li class="page-item disabled">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageSize="@(clients.PageSize)"
                               asp-route-pageNumber="@(clients.CurrentPage)"
                               asp-route-searcString="@(queryString.SearchString)">
                                @clients.CurrentPage
                            </a>
                        </li>
                        @if (clients.HasNext)
                        {
                            <li class="page-item ">
                                <a asp-action="Index"
                                   asp-route-pageSize="@(clients.PageSize)"
                                   asp-route-pageNumber="@(clients.CurrentPage + 1)"
                                   asp-route-searcString="@(queryString.SearchString)"
                                   class="page-link">
                                    @((clients.CurrentPage + 1).ToString())
                                </a>
                            </li>
                        }
                        <li class="@($"page-item {(clients.HasNext ? string.Empty : "disabled")}")">
                            <a asp-action="Index"
                               asp-route-pageSize="@(clients.PageSize)"
                               asp-route-pageNumber="@(clients.CurrentPage + 1)"
                               asp-route-searcString="@(queryString.SearchString)"
                               class="@($"page-link {(clients.HasPrevious ? string.Empty : "disabled")}")">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
}
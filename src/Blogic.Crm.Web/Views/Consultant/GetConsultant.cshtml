@model Blogic.Crm.Web.Views.Consultant.GetConsultantViewModel

@{
    ViewData["Title"] = "Account";
    var consultant = Model.Consultant;
}

<nav aria-label="breadcrumb mt-4 mb-5">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="GetConsultants">Consultants</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Account</li>
    </ol>
</nav>

<h1>Account</h1>
@await Html.PartialAsync("Consultant/_GetConsultantPartial", consultant)

<h2>Managed contracts</h2>
<p>
    <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#toggle-managed-contracts" aria-expanded="false" aria-controls="collapseExample">
        Show
    </button>
</p>

<div class="collapse" id="toggle-managed-contracts">
    @if (Model.ManagedContracts is not null)
    {
        foreach (var contract in Model.ManagedContracts)
        {
            @await Html.PartialAsync("Contract/_GetContractPartial", contract)
        }
    }
</div>

@using Humanizer
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Blogic.Crm.Web.Views.Consultant.ConsultantCreateViewModel

@{
    ViewData["Title"] = "Register Consultant";
    var consultant = Model.Consultant;
    var validationException = Model.ValidationException;
}

<h1 class="mt-4">Register Consultant</h1>

<form asp-action="CreateConsultant"
      method="@HttpMethods.Post"
      asp-antiforgery="true">
    <div class="mb-3">
        <label asp-for="@consultant.Email" class="form-label">@nameof(consultant.Email).Humanize()</label>
        <input type="email" class="form-control" asp-for="@consultant.Email">
        @if (validationException != null &&
             validationException.ValidationFailures.ContainsKey(nameof(consultant.Email)) &&
             validationException.ValidationFailures[nameof(consultant.Email)].Length > 0)
        {
            var validationFailures = validationException.ValidationFailures[nameof(consultant.Email)];

            <div for="@consultant.Email" class="form-text">
                @foreach (var validationFailure in validationFailures)
                {
                    <p class="text-danger">@validationFailure</p>
                }
            </div>
        }
    </div>
    <div class="mb-3">
        <label asp-for="@consultant.Password" class="form-label">@nameof(consultant.Password).Humanize()</label>

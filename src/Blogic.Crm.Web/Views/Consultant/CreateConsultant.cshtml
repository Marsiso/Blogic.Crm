                {
                    <p class="text-danger">@validationFailure</p>
                }
            </div>
        }
    </div>
    <div class="mb-3">
        <label asp-for="@consultant.BirthNumber" class="form-label">@nameof(consultant.BirthNumber).Humanize()</label>
        <input type="text" class="form-control" asp-for="@consultant.BirthNumber">
        @if (validationException != null &&
             validationException.ValidationFailures.ContainsKey(nameof(consultant.BirthNumber)) &&
